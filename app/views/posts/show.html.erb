<h2><%= @post.title %></h2>
<p><%= @post.content %></p>

<table class="table table-hover table-striped table-condensed"><!-- Display Comments Here -->
  <thead>
    <tr>
      <th>User</th>
      <th>Comment</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user.first_name %></td>
        <td><%= comment.comment %></td>

      </tr>
    <% end %>
  </tbody>
</table>


      <%= link_to "New Comment", new_subcheckit_post_comment_path(post_id: @post.id), class: "btn btn-primary" %>
